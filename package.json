    "prisma": "^5.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/bearer": "^0.8.0",
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/jwt": "^0.8.0",
    "@elysiajs/swagger": "^0.8.5",
    "@prisma/client": "5.9.1",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.3.1",
    "elysia": "^0.8.16",
    "libphonenumber-js": "^1.10.55",
    "zod": "^3.22.4"
